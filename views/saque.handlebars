<head>
    <meta charset="utf-8">
    <title>Saque - 4K Bank</title>
    <link rel="stylesheet" type="text/css" href="../public/CSS/saque.css">
</head>

<body>
    <header>
        <img src="../public/Imagens/4KBank.png" alt="4K Bank" id="bank">
        <h1>4K Bank</h1>
        <nav>
            <ul>
                <li><a href="http://localhost:3001/dashboard">Dashboard</a></li>
                <li><a href="http://localhost:3001/transferencia">Transferência</a></li>
                <li><a href="http://localhost:3001/deposito">Depósito</a></li>
                <li><a href="http://localhost:3001/saque">Saque</a></li>
                <li><a href="http://localhost:3001/extrato">Extrato</a></li>
                <li><a href="http://localhost:3001/">Sair</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <a href="http://localhost:3001/dashboard"><button id="voltar">Voltar</button></a>
        <div id="caixa">
            <h2>Saque</h2>
        </div>
        <div id="forma">
            <form action="http://localhost:3001/logSaque" method="post">
                <label for="valor">Valor do depósito:</label>
                <input type="number" id="valor" name="valor" required>
                <label for="senha">Senha:</label>
                <input type="password" name="senha" required>
                <button type="submit">Depositar</button>
            </form>
        </div>
    </main>
    {{#if errorPopup}}
    {{{errorPopup}}}
    {{/if}}
    <footer>
        <span>&copy; 2023</span>
        <span>4K Bank</span>
    </footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var popup = document.getElementById("errorPopup");
            function showPopup() {
                setTimeout(function () {
                    popup.setAttribute("hidden", "");
                }, 3000);

            }
            showPopup();
        });
    </script>
</body>